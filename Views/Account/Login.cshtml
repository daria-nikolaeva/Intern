@model Internship.Models.LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<h1>Login</h1>


<form asp-action="Login" asp-controller="Account" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly" />
    <div>
        <div class="form-group">
            <label style="font-weight:700" asp-for="Login">Login</label></br>
            <input type="text" asp-for="Login" />
            <span asp-validation-for="Login" />
        </div>
        <div class="form-group">
            <label style="font-weight:700" asp-for="Password">Password</label></br>
            <input asp-for="Password" />
            <span asp-validation-for="Password" />
        </div>
        <div class="form-group">
            <input type="submit" value="Enter" class="btn btn-success" />
        </div>
    </div>
</form>

<a class="btn btn-primary" style="margin:30px" asp-action="Register" asp-controller="Account">Registration</a>